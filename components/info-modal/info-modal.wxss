.modal-wrap {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.45);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.modal-panel {
  width: 100%;
  max-width: 720rpx;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.close-btn {
  background: transparent;
  font-size: 36rpx;
  border: none;
  line-height: 1;
}

.modal-body {
  padding: 18rpx 0;
}

.row {
  display: flex;
  align-items: center;
  padding: 14rpx 0;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-value {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #666;
  padding-right: 10rpx;
}

.textarea-row {
  align-items: flex-start;
}

.notes {
  flex: 1;
  min-height: 160rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 28rpx;
  color: #444;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
}

.btn {
  flex: 1;
  padding: 12rpx 0;
  margin: 0 8rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
}

.btn-cancel {
  background: #f6f6f6;
  color: #333;
}

.btn-confirm {
  background: #007aff;
  color: #fff;
}
