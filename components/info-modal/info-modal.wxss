.modal-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 40rpx;
}

.modal-panel {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  animation: modal-show 0.3s ease;
}

@keyframes modal-show {
  from {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* 弹窗头部 */
.modal-header {
  background: linear-gradient(135deg, #4a90e2, #3d6aff);
  padding: 40rpx 32rpx;
  text-align: center;
}

.modal-header .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 弹窗主体 */
.modal-body {
  padding: 40rpx 32rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f0f4ff;
  transition: all 0.2s ease;
}

.row:active {
  background-color: #f8faff;
  border-radius: 16rpx;
  margin: 0 -16rpx;
  padding: 28rpx 16rpx;
}

.row:last-of-type {
  border-bottom: none;
}

.textarea-row {
  align-items: flex-start;
  flex-direction: column;
}

.label {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  min-width: 120rpx;
}

/* Switch 开关样式 */
switch {
  transform: scale(0.9);
}

switch[checked] .wx-switch-input {
  background: #4a90e2 !important;
}

/* Picker 选择器样式 */
.picker-value {
  font-size: 28rpx;
  color: #3d6aff;
  font-weight: 500;
  padding: 16rpx 24rpx;
  background: #f2f6ff;
  border-radius: 20rpx;
  min-width: 200rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.picker-value:active {
  background: #e4ecff;
  transform: scale(0.98);
}

/* 文本域样式 */
.textarea-row .label {
  margin-bottom: 20rpx;
}

.notes {
  width: 100%;
  min-height: 100rpx;
  height: 100px;
  background: #f8faff;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e8f1ff;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.notes:focus {
  border-color: #3d6aff;
  background: #ffffff;
  box-shadow: 0 0 0 2rpx rgba(61, 106, 255, 0.1);
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f4ff;
  padding: 0;
}
.btn {
  flex: 1;
  border: none;
  border-radius: 0;
  padding: 22rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.btn::after {
  border: none;
}

.btn-cancel {
  background: #ffffff;
  color: #607d8b;
  border-right: 1rpx solid #f0f4ff;
}

.btn-cancel:active {
  background: #f8f9fa;
  color: #455a64;
}

.btn-confirm {
  background: linear-gradient(135deg, #4a90e2, #3d6aff);
  color: #ffffff;
}

.btn-confirm:active {
  background: linear-gradient(135deg, #3a80d2, #2d5aef);
  transform: scale(0.995);
}

/* 按钮点击效果 */
.btn:active::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: translate(-50%, -50%) scale(0);
  animation: btn-ripple 0.4s ease-out;
}

@keyframes btn-ripple {
  to {
    transform: translate(-50%, -50%) scale(2);
    opacity: 0;
  }
}

/* 空值提示样式 */
.picker-value:empty::before {
  content: attr(data-placeholder);
  color: #90a4ae;
  font-weight: normal;
}

/* 响应式适配 */
@media (max-width: 360px) {
  .modal-panel {
    max-width: 100%;
    margin: 20rpx;
  }
  
  .modal-body {
    padding: 32rpx 24rpx;
  }
  
  .row {
    padding: 24rpx 0;
  }
}