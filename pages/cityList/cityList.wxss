/* pages/cityList/cityList.wxss */
/* 头部样式 */
.header {
  background: linear-gradient(135deg, #1a73e8, #6c8ef5);
  color: white;
  padding: 30rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number, .stat-percent {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 搜索框样式 */
.search-box {
  position: relative;
  margin: 30rpx;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  height: 80rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}



.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: rgb(29, 39, 59);
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.section {
  margin-bottom: 50rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.dates {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.date {
  font-size: 24rpx;
  color: #666;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

.divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 30rpx 0;
}

.cities-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.city-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  box-sizing: border-box;
  background-color: azure;
}

.city-item.visited {
  font-weight: bold;
  color: #333;
}