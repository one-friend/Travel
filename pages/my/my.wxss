.container {
  padding: 16px;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.profile {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.avatar_btn {
  border: none;
  padding: 0;
  background: none;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.username {
  flex: 1;
  height: 36px;
  padding: 0 8px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 16px;
}

.city-count {
  font-size: 14px;
  color: #888;
  margin-top: 4px;
}

.map-switch {
  display: flex;
  justify-content: space-around;
  margin: 16px 0;
}

.map-switch button {
  flex: 1;
  margin: 0 4px;
  padding: 8px 0;
  border-radius: 6px;
  border: 1px solid #ccc;
  background-color: #fff;
  color: #333;
  font-size: 14px;
}

.map-switch button.active {
  background-color: #007aff;
  color: #fff;
  border-color: #007aff;
}

.map-container {
  height: 100px;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16px;
  background-color: #e5e5e5;
}

.map-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}

.section {
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
}

.city-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.city-item {
  background-color: #fff;
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 14px;
  border: 1px solid #ddd;
}

.logout-section {
  text-align: center;
}

.logout-button {
  padding: 10px 20px;
  border-radius: 8px;
  background-color: #ff3b30;
  color: #fff;
  border: none;
  font-size: 16px;
}
