page {
  background: linear-gradient(180deg, #e0f0ff 0%, #ffffff 65%);
  min-height: 100vh;
  font-family: 'PingFang SC', 'Helvetica Neue', sans-serif;
  color: #333;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 100rpx;
}

/* ===== 个人资料区域 ===== */
.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-btn {
  border: none;
  background: none;
  padding: 0;
  margin: 0;
  width: 160rpx;
  height: 160rpx;
  box-sizing: border-box;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.username {
  margin-top: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  background: none;
  color: #1f2d3d;
}

.city-count {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #607d8b;
}

/* ===== 地图切换（优化样式） ===== */
.map-switch {
  display: flex;
  flex-wrap: wrap; 
  justify-content: center;
  gap: 30rpx 20rpx; 
  margin-bottom: 60rpx;
}

.map-item {
  position: relative;
  padding-top: 20rpx; 
  display: flex;
  align-items: center;
  flex-shrink: 0; 
}

/* 主地图按钮通用样式 */
.map-btn {
  background-color: #e8f1ff;
  border-radius: 30rpx;
  padding: 14rpx 40rpx;
  font-size: 28rpx;
  color: #1e4fff;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  margin: 0;
  line-height: 2.5; 
  height: auto;
}

.map-btn.active {
  background: linear-gradient(135deg, #4a90e2, #3d6aff);
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(61, 106, 255, 0.3);
  border: none;
}

/* 动作按钮容器：定位到 map-item 的右上角 */
.map-actions {
  position: absolute;
  right: 0;
  top: 0; 
  display: flex;
  flex-direction: row; 
  align-items: center;
  gap: 8rpx;
  z-index: 5; 
  transform: translateX(10rpx); 
}

/* 动作按钮通用样式 */
.action-btn {
  width: 40rpx;
  height: 40rpx;
  min-width: 40rpx;
  padding: 0;
  border: none;
  background: rgba(255, 255, 255, 0.85) !important; 
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15); 
  margin: 0;
  line-height: 1;
}
.action-btn::after {
  border: none;
}
.action-btn:active {
  transform: scale(0.9);
}

/* 重命名样式 */
.rename-btn {
  color: #3d6aff;
  font-size: 24rpx;
}

/* 删除样式 */
.delete-btn {
  background-color: #ff4d4f !important;
  box-shadow: 0 1rpx 4rpx rgba(255, 77, 79, 0.4);
}

.delete-icon {
  color: #fff;
  font-size: 30rpx; 
  font-weight: 700;
  line-height: 1;
}

/* 创建足迹按钮 */
.create-btn {
  background: linear-gradient(135deg, #4a90e2, #3d6aff) !important;
  color: #fff !important;
  border: none !important;
  /* 修复新建按钮高度 */
  line-height: 2.5;
  height: auto;
  display: flex;
  align-items: center;
}

.create-btn:active {
  background: linear-gradient(135deg, #4a90e2, #3d6aff) !important;
  transform: scale(0.95);
}

/* ===== 足迹卡片及文案区 ===== */
.section {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  padding: 40rpx;
  margin-bottom: 40rpx;
}

/* 新增：地图说明文案区域 */
.map-description-container {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  background: #f8faff; /* 浅蓝背景 */
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #e0eaff;
}

.map-description-text {
  flex: 1;
  font-size: 28rpx;
  color: #4a5a6b;
  line-height: 1.6;
  white-space: pre-wrap; /* 保持换行 */
}

.map-description-edit {
  background: none;
  border: none;
  color: #3d6aff;
  font-size: 26rpx;
  padding: 0 0 0 20rpx;
  margin: 0;
  line-height: 1.6;
  min-width: unset;
  height: auto;
}
.map-description-edit::after {
  border: none;
}
/* End 新增：地图说明文案区域 */


.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 30rpx;
  display: block;
}

.city-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.city-item {
  background: #f2f6ff;
  color: #3d6aff;
  border-radius: 30rpx;
  padding: 18rpx 32rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.city-item:active {
  transform: scale(0.96);
  background: #e4ecff;
  box-shadow: 0 6rpx 12rpx rgba(61, 106, 255, 0.25);
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
  width: 100%;
}

.go_light {
  padding: 0;
  color: #1e4fff;
  text-decoration: underline;
}

.logout-section {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.logout-button {
  width: 80%;
  background: linear-gradient(135deg, #4a90e2, #3d6aff);
  color: #fff;
  border-radius: 40rpx;
  padding: 26rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(61, 106, 255, 0.3);
  transition: all 0.25s ease;
  border: none;
}

.logout-button:active {
  transform: scale(0.97);
  opacity: 0.9;
}

/* 弹层样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.popup {
  width: 80%;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  animation: popup-show 0.25s ease;
}

@keyframes popup-show {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.popup-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  color: #2c3e50;
  margin-bottom: 40rpx;
}

.popup-field {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.popup-field.description-input-field {
  display: block; /* 覆盖 flex 布局，方便 textarea 占据整行 */
}

.label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.popup-field.remark {
  flex-direction: column;
  align-items: flex-start;
}

.popup-field textarea {
  box-sizing: border-box;
  width: 100%;
  min-height: 120rpx;
  background: #f8faff;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
  box-shadow: inset 0 0 8rpx rgba(0, 0, 0, 0.05);
}

/* 新增：文案编辑输入框 */
.description-textarea {
  width: 100%;
  min-height: 150rpx; 
  background: #f8faff;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: inset 0 0 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #e0e0e0;
}
.description-textarea:focus {
  border-color: #4a90e2;
}
/* End 新增：文案编辑输入框 */


.create-input, .rename-input {
  flex: 1;
  background: #f8faff;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  box-shadow: inset 0 0 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #e0e0e0;
}

.create-input:focus, .rename-input:focus {
  border-color: #4a90e2;
}

.popup-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.popup-cancel {
  flex: 1;
  background: #f0f0f0;
  color: #666;
  border-radius: 40rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  border: none;
}

.popup-cancel:active {
  background: #e0e0e0;
  transform: scale(0.98);
}

.popup-save {
  flex: 1;
  background: linear-gradient(135deg, #4a90e2, #3d6aff);
  color: #fff;
  border-radius: 40rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(61, 106, 255, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.popup-save:active {
  transform: scale(0.98);
}

wx-button::after{
  border: none;
}